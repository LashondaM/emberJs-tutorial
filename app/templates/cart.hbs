{{page-title "Cart"}}

<main class="container mt-5">
    <h2 class="display-1">Shopping Cart</h2>
    <ol class="breadcrumb mt-3 w-50 shade">
        <li class="breadcrumb-item brc-1">
            <LinkTo @route="index">
                Home
            </LinkTo>
        </li>
        <li class="breadcrumb-item">Shopping Cart</li>
    </ol>
    <section class="sec-1 w-50 mb-5">
        <div class="row">
            <span class="sp-1 col">Subtotal</span>
            <span class="col">{{this.subtotal}}</span>
        </div>
        <div class="row">
            <span class="sp-1 col">Tax</span>
            <span class="col">{{this.tax}}</span>
        </div>
        <div class="row">
            <span class="sp-1 col">Total</span>
            <span class="col">{{this.total}}</span>
        </div>
    </section>

    
    <button type="button" class="btn btn-success">
        Check Out
    </button>
</main>